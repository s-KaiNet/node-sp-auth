{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "./lib",
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "mocha",
      "node",
      "chai"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}